---
import Button from "../Button.astro";
---

<style lang="scss">
  section {
    --clr-overlay: hsla(192, 37%, 48%, 92%);
    --bg-url: url("/assets/mobile/image-footer.jpg");

    @media screen and (min-width: 768px) {
      --bg-url: url("/assets/tablet/image-footer.jpg");
    }

    @media screen and (min-width: 1200px) {
      --bg-url: url("/assets/desktop/image-footer.jpg");
    }

    box-sizing: content-box;
    padding-bottom: 72px;
    padding-left: 24px;
    padding-right: 24px;

    background-color: var(--clr-primary-400);
    background-image:
      linear-gradient(to bottom, var(--clr-overlay), var(--clr-overlay)),
      var(--bg-url);
    background-size: cover;
  }

  .content {
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;

    display: flex;
    flex-direction: column;
    align-items: center;

    color: white;
    text-align: center;
    
    p {
      max-width: 60ch;
      margin-top: 24px;
      margin-bottom: 32px;
    }

    @media screen and (min-width: 1200px) {
      flex-direction: row;
      justify-content: space-evenly;
      text-align: left;

      & > * {
        flex-basis: 350px;
      }

      & > p {
        margin-top: 0;
        margin-bottom: 0;
        margin-left: auto;
        margin-right: auto;
      }
    }
  }

</style>

<section>
  <div class="content">
    <h2>Experience more together</h2>

    <p>Stay connected with reliable HD meetings and unlimited one-on-one and group video sessions.</p>

    <Button color="secondary" href="#" >Download <span class="clr-secondary-600">v1.3</span></Button>
  </div>
</section>